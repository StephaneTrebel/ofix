{
  "name": "ofix",
  "version": "1.0.0",
  "description": "Fix OFX files",
  "main": "src/main.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "npm run clean:dist",
    "clean:dist": "rm -rf dist",
    "postinstall": "npm audit --production",
    "prebuild": "npm run clean && npm run typecheck",
    "build": "node build.js",
    "prepackage": "npm run build",
    "package": "pkg --targets=node14,win --out-path dist dist/ofix.js",
    "start": "node dist/ofix.js -h",
    "tdd": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ofx"
  ],
  "author": "St√©phane TREBEL",
  "license": "MIT",
  "dependencies": {
    "ofx": "^0.5.0"
  },
  "devDependencies": {
    "@types/argv": "0.0.5",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.2",
    "argv": "0.0.2",
    "esbuild": "^0.13.4",
    "glob": "^7.2.0",
    "jest": "^27.2.4",
    "pkg": "^5.3.3",
    "read-package-json-fast": "^2.0.3",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "pkg": {
    "assets": "**/*.node"
  }
}
